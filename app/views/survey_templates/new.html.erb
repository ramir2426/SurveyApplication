<div class="survey-form">
	<%= form_with(model: @survey_template, local: true) do |form| %>
		<div class="form-group">
			<%= form.label :name %><br>
			<%= form.text_field :name, class: "form-control", placeholder: "Survey Name" %>
		</div>
		<div class="form-group">
			<%= form.label :province %><br>
			<%= form.select :province, options_for_select([ "Blochistan", "KPK", "Punjab", "Sindh" ]), {:prompt => "Select province"}, { class: "form-control"} %>
			
		</div>
		<div class="form-group">
			<% InterestData::Activities.each do |activity| %>
				<div class="form-check-inline">
		      <label class="form-check-label" for="check2">
		        <%= form.check_box :interests, { multiple: true }, activity, nil %> <%= activity%>
		      </label>
		    </div>
		  <% end %>
		</div>

		<div class="form-group">
			<%= form.label :biography %><br>
			<%= form.text_area :biography, class: "form-control", placeholder: "Biography" %>
		</div>

		<div class="form-group">

			<%=form.collection_select(:user_id, User.all, :id, :full_name, {prompt: "Please select the user of this survey"}, class: "form-control")%>
		</div>

		<div class="form-group text-center">
			<%= form.submit "Save",class: "btn btn-primary" %>
		</div>

	<% end %>
</div>
